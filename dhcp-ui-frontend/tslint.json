{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "no-console": false,
    "no-bitwise": false,
    "object-literal-sort-keys": false,
    "semicolon": [
      true,
      "always"
    ],
    "quotemark": [
      true,
      "double"
    ],
    "max-classes-per-file": false,
    "jsx-no-lambda": false,
    "eofline": true,
    "indent": [
      true,
      "spaces",
      2
    ],
    "no-consecutive-blank-lines": true,
    "no-irregular-whitespace": true,
    "no-trailing-whitespace": true,
    "object-literal-key-quotes": [
      true,
      "consistent-as-needed"
    ],
    "deprecation": true,
    "cyclomatic-complexity": true,
    "max-line-length": [
      true,
      120
    ],
    "prefer-readonly": true,
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "arrow-return-shorthand": [
      true,
      "multiline"
    ],
    "comment-format": [
      true,
      "check-space"
    ],
    "encoding": true,
    "no-unnecessary-callback-wrapper": true,
    "no-any": {
      "severity": "warning"
    }
  }
}